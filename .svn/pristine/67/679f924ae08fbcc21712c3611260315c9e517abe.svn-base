				<th width="150">更新时间</th>
				
				<th width="100">操作</th>
			</tr>
		</thead>
		<tbody>
		{foreach $data as $da}
			<tr class="text-c">
			
				<td>{$da.id}</td>
				<td>{$da.user_name}</td>
				
				<td><img width="210" class="picture-thumb" src="{$da.url}"></td>
				
				
				
				<td>{$da.create_time}</td>
<td class="td-manage"> <a style="text-decoration:none" class="ml-5"  href="{:url('index/Index/imgedit')}?id={$da.id};" title="编辑">
<i class="Hui-iconfont">&#xe6df;</i></a> 
					 <a style="text-decoration:none" class="ml-5" onClick="picture_del(this,'{$da.id}')" href="javascript:;" title="删除"><i class="Hui-iconfont">&#xe6e2;</i></a>

</td>
			</tr>
			{/foreach}
